{
  "name": "vue-drag-selector",
  "version": "0.1.3",
  "main": "./dist/DragSelector.umd.min",
  "private": false,
  "homepage": "https://github.com/xubaifuCode/vue-drag-selector",
  "bugs": {
    "url": "https://github.com/xubaifuCode/vue-drag-selector/issues",
    "email": "xubaifu97@gmail.com"
  },
  "keywords": [
    "vue",
    "drag",
    "selector"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/xubaifuCode/vue-drag-selector.git"
  },
  "description": "A simple vue drag selector",
  "license": "MIT",
  "scripts": {
    "build": "vue-cli-service build --target lib --name DragSelector src/index.js",
    "lint": "vue-cli-service lint"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.2.2",
    "@vue/cli-plugin-eslint": "^3.0.3",
    "@vue/cli-service": "^3.0.3",
    "vue-template-compiler": "^2.5.17",
    "webpack-dev-server": ">=3.1.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "block-spacing": [
        "error",
        "always"
      ],
      "brace-style": [
        "error",
        "stroustrup",
        {
          "allowSingleLine": true
        }
      ],
      "implicit-arrow-linebreak": [
        "error",
        "beside"
      ],
      "indent": [
        2,
        4
      ],
      "object-curly-newline": [
        "error",
        {
          "ObjectExpression": "always",
          "ObjectPattern": "never"
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
